# top-most EditorConfig file
root = true

# Set default charset
[*]
charset = utf-8

# Unix-style newlines with a newline ending every file
end_of_line = lf
# set to true to ensure file ends with a newline
# when saving and false to ensure it doesn't.
insert_final_newline = true

# 4 space indentation
indent_size = 4
indent_style = space

# set to true to remove any whitespace characters
# preceding newline characters and false to ensure it doesn't.
trim_trailing_whitespace = true

max_line_length = 120
tab_width = 4

[{*.yml, *.yaml}]
indent_size = 2
